{
  "kind": "collectionType",
  "collectionName": "periods",
  "info": {
    "singularName": "period",
    "pluralName": "periods",
    "displayName": "Period",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "fromDate": {
      "type": "integer",
      "required": true,
      "min": 80000,
      "max": 120000
    },
    "endDate": {
      "type": "integer",
      "required": true,
      "max": 120000,
      "min": 80000
    },
    "occurence": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "color": {
      "type": "string",
      "regex": "^#(?:[0-9a-fA-F]{3}){1,2}$",
      "required": false,
      "default": "#ffffff"
    },
    "description": {
      "type": "richtext"
    },
    "majorEvents": {
      "type": "richtext"
    },
    "showTimeOnSite": {
      "type": "boolean",
      "default": false
    },
    "shortDescription": {
      "type": "string"
    },
    "links": {
      "type": "richtext"
    },
    "media": {
      "type": "json",
      "required": true
    }
  }
}
